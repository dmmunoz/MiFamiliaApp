<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMiFamilia"
    tools:context=".recuperarPassword">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="376dp"
        android:layout_height="46dp"
        android:text="Recuperación de Contraseña"
        android:textAlignment="center"
        android:textColor="@color/cyanMiFamilia"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="0.152" />

    <EditText
        android:id="@+id/etEmailRecuperacion"
        android:layout_width="348dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Introducza su email aqui...."
        android:inputType="textEmailAddress"
        android:textColor="@color/browser_actions_title_color"
        android:textColorHint="@color/cardview_shadow_start_color"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btRecuperarPass"
        android:layout_width="216dp"
        android:layout_height="56dp"
        android:layout_marginTop="116dp"
        android:background="@color/cyanMiFamilia"
        android:text="Recuperar"
        app:layout_constraintEnd_toEndOf="@+id/etEmailRecuperacion"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="@+id/etEmailRecuperacion"
        app:layout_constraintTop_toBottomOf="@+id/etEmailRecuperacion" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="337dp"
        android:layout_height="80dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoestrecho" />

    <ImageView
        android:id="@+id/btAtrasForget"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:focusable="auto"
        android:focusableInTouchMode="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btRecuperarPass"
        app:srcCompat="@drawable/botonatras" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="ATRÁS"
        android:textColor="@color/cyanMiFamilia"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btAtrasForget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toEndOf="@+id/btAtrasForget"
        app:layout_constraintTop_toTopOf="@+id/btAtras" />

</androidx.constraintlayout.widget.ConstraintLayout>