<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMiFamilia"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="379dp"
        android:layout_height="73dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoestrecho" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="358dp"
        android:layout_height="467dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:textColor="@color/browser_actions_title_color"
            android:textColorHint="@color/cardview_shadow_start_color" />

        <EditText
            android:id="@+id/etApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Apellidos"
            android:inputType="textPersonName"
            android:textColor="@color/browser_actions_title_color"
            android:textColorHint="@color/cardview_shadow_start_color" />

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="1dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="6dp"
            android:text="TextView"
            android:textAlignment="gravity"
            android:textColor="@color/browser_actions_title_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/formularioPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColor="@color/browser_actions_title_color"
            android:textColorHint="@color/cardview_shadow_start_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/formularioPass2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Confirme contraseña"
            android:inputType="textPassword"
            android:textColor="@color/browser_actions_title_color"
            android:textColorHint="@color/cardview_shadow_start_color"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/btRegistro"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@color/cyanMiFamilia"
            android:fontFamily="sans-serif-medium"
            android:text="Registar"
            android:textSize="18sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/etCondiciones"
            android:layout_width="223dp"
            android:layout_height="33dp"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:clickable="true"
            android:focusable="auto"
            android:focusableInTouchMode="true"
            android:text="Condiciones de uso. Clic para Ver"
            android:textColor="@color/cyanMiFamilia"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/checkCondiciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Acepto las condiciones de uso" />

        <TextView
            android:id="@+id/etErrorRegistro"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/design_default_color_error"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/btAtras"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:srcCompat="@drawable/botonatras" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATRÁS"
        android:textColor="@color/cyanMiFamilia"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/btAtras"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toEndOf="@+id/btAtras"
        app:layout_constraintTop_toTopOf="@+id/btAtras" />
</androidx.constraintlayout.widget.ConstraintLayout>